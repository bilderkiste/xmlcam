<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<xsd:element name="program">
		<xsd:complexType>
			<xsd:choice minOccurs="0" maxOccurs="unbounded">
				<xsd:element name="line">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="p" type="pointtype" minOccurs="2" maxOccurs="2" />
							<xsd:element name="z" type="ztype" />
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>
				<xsd:element name="circle">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="p" type="pointtype" />
							<xsd:element name="rad" type="radtype" />						
							<xsd:element name="z" type="ztype" />
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>
				<xsd:element name="polyline">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="p" type="pointtype" />
							<xsd:choice minOccurs="1" maxOccurs="unbounded">
								<xsd:sequence>
									<xsd:element name="bez" type="pointtype" minOccurs="1" maxOccurs="unbounded" /> 
									<xsd:element name="p" type="pointtype" />
								</xsd:sequence>
								<xsd:sequence>
									<xsd:element name="spl" type="pointtype" minOccurs="1" maxOccurs="unbounded" />
								</xsd:sequence>
								<xsd:element name="p" type="pointtype" />	
							</xsd:choice>
							<xsd:element name="z" type="ztype" />
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>
				<xsd:element name="translate">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:choice minOccurs="0" maxOccurs="unbounded">
								<xsd:element name="line" />
								<xsd:element name="polyline" />
								<xsd:element name="circle" />			
							</xsd:choice>
						</xsd:sequence>
						<xsd:attribute name="x" type="xsd:decimal" />
						<xsd:attribute name="y" type="xsd:decimal" />
					</xsd:complexType>

				</xsd:element>
				<xsd:element name="feedrate" type="xsd:positiveInteger" />
			</xsd:choice>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:simpleType name="pointtype">
	    <xsd:restriction base="xsd:string">
	    	<xsd:pattern value="-?[0-9]+(\.[0-9]+)?,-?[0-9]+(\.[0-9]+)?"/>
	    </xsd:restriction>
	</xsd:simpleType>
	
	<xsd:simpleType name="ztype">
	    <xsd:restriction base="xsd:string">
	    	<xsd:pattern value="-?[0-9]+(\.[0-9]+)?,-?[0-9]+(\.[0-9]+)?,[0-9]+(\.[0-9]+)?"/>
	    </xsd:restriction>
	</xsd:simpleType>
	
	<xsd:simpleType name="radtype">
	    <xsd:restriction base="xsd:string">
	    	<xsd:pattern value="[0-9]+(\.[0-9]+)?"/>
	    </xsd:restriction>
	</xsd:simpleType>
	 
</xsd:schema>